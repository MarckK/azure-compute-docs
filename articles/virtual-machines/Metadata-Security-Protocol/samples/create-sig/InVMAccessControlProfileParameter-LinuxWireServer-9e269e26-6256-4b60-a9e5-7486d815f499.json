{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "languageVersion": "2.0",
  "parameters": {
    "existingGalleryName": {
      "value": "myGallery"
    },
    "existingInVMAccessControlProfile": {
      "value": "LinuxIMDS"
    },
    "inVMAccessControlProfileVersion": {
      "value": "1.0.0"
    },
    "profileVersionProperties": {
      "value": {
        "targetLocations": [
          {
            "name": "eastus2euap"
          }
        ],
        "excludeFromLatest": false,
        "mode": "Enforce",
        "defaultAccess": "Allow",
        "rules": {
          "privileges": [
            {
              "path": "/machine",
              "queryParameters": {
                "comp": "goalstate"
              },
              "name": "GoalState"
            }
          ],
          "roles": [
            {
              "name": "Provisioning",
              "privileges": ["GoalState"]
            },
            {
              "name": "ManageGuestExtensions",
              "privileges": ["GoalState"]
            },
            {
              "name": "Security",
              "privileges": ["GoalState"]
            },
            {
              "name": "SecretManagement",
              "privileges": ["GoalState"]
            }
          ],
          "identities": [
            {
              "name": "CloudInit",
              "userName": "root",
              "exePath": "/usr/bin/python3.9"
            },
            {
              "name": "WaAgent",
              "userName": "root",
              "exePath": "/usr/bin/python3.9"
            },
            {
              "name": "WaLinuxAgent",
              "userName": "root",
              "exePath": "/usr/bin/python3.9"
            },
            {
              "name": "AzureSecurityMonitorExtension",
              "userName": "root",
              "processName": "asm-extension"
            },
            {
              "name": "Secd",
              "userName": "root",
              "exePath": "/usr/local/bin/azsecd"
            }
          ],
          "roleAssignments": [
            {
              "role": "Provisioning",
              "identities": ["CloudInit"]
            },
            {
              "role": "ManageGuestExtensions",
              "identities": ["WaAgent", "WaLinuxAgent"]
            },
            {
              "role": "Security",
              "identities": ["AzureSecurityMonitorExtension"]
            },
            {
              "role": "SecretManagement",
              "identities": ["Secd"]
            }
          ]
        }
      }
    }
  }
}
