{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "languageVersion": "2.0",
  "parameters": {
    "existingGalleryName": {
      "value": "myGallery"
    },
    "existingInVMAccessControlProfile": {
      "value": "LinuxIMDS"
    },
    "inVMAccessControlProfileVersion": {
      "value": "1.0.0"
    },
    "profileVersionProperties": {
      "value": {
        "targetLocations": [
          {
            "name": "eastus2euap"
          }
        ],
        "excludeFromLatest": false,
        "mode": "Enforce",
        "defaultAccess": "Allow",
        "rules": {
          "privileges": [
            {
              "path": "/metadata/identity/auth2/token",
              "name": "MSIToken"
            }
          ],
          "roles": [
            {
              "name": "SecurityAndMonitor",
              "privileges": ["MSIToken"]
            },
            {
              "name": "SecretManagement",
              "privileges": ["MSIToken"]
            }
          ],
          "identities": [
            {
              "name": "AzureSecurityMonitorExtension",
              "userName": "root",
              "processName": "asm-extension"
            },
            {
              "name": "secd",
              "userName": "root",
              "exePath": "/usr/local/bin/azsecd"
            },
            {
              "name": "AzureMonitorAgent",
              "userName": "syslog",
              "exePath": "/opt/microsoft/azuremonitoragent/bin/mdsd"
            }
          ],
          "roleAssignments": [
            {
              "role": "SecurityAndMonitor",
              "identities": [
                "AzureSecurityMonitorExtension",
                "AzureMonitorAgent"
              ]
            },
            {
              "role": "SecretManagement",
              "identities": ["secd"]
            }
          ]
        }
      }
    }
  }
}
